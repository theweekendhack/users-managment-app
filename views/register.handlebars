<section>
    <h1>Register Page</h1>

    {{#each errors}}
            <div class="error">{{this}}</div>
    {{/each}}    
    <form method="post" action="/users/registration" >
        <!-- 
                From should have 

                1. Submit button
                2 <form method= "" action="">
                3. Every form control has a name
        -->

        <!--

            Every form control MUST be assigned a name attribute
            If you don't do this, your back-end will NOT
            be able to access the data within the FORM!
        -->
        <div>
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" name="firstName" value="{{current_form_data.firstName}}">
        </div>

        <div>
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" value="{{current_form_data.lastName}}">
        </div>

        <div>

            <label for="location">Location</label>
            <select id="location" name="location"> 
                 <option value="">Please select a location</option>
                <option value="TnT">TnT</option>
                <option value="USA">United State Of America</option>
                <option value="Canada">Canada</option>
            </select>

        </div>

        <div>
            <label for="username">Username</label>
            <input type="text" id="username" name="username" value="{{current_form_data.username}}">
        </div>

         <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" value="{{current_form_data.password}}">
        </div>

        <div>
            <button type="submit">Register</button>
        </div>
    </form>
</section>